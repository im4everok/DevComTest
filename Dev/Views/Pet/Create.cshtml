@model Dev.Models.PetModel;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Pet" 
              asp-action="Create"
              asp-route-ownerId=@Model.Owner.Id
              asp-route-name="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
                <input type="hidden" asp-for="Owner.Id" />
            </div>*@
            <div class="form-group">
                <label asp-for="Pet.Name" class="control-label"></label>
                <input asp-for="Pet.Name" class="form-control" />

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@Html.ActionLink("Back to owner's pets", "Details", "Person", new { ownerId = Model.Owner.Id}, new { @class = "btn btn-primary float-right"})

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
