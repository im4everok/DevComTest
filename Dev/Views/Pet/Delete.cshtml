@using BLL.Interfaces;
@model Dev.Models.PetModel;
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this pet?</h3>
<div>
    <h4>Pet</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pet.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pet.Name)
        </dd>
    </dl>
<form asp-controller="Pet"
      asp-action="Delete"
      asp-route-petId=@Model.Pet.Id
      asp-route-ownerId=@Model.Owner.Id>
    <input type="hidden" asp-for="Pet.Id" />
    <input type="hidden" asp-for="Owner.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    @Html.ActionLink("Back to owner's pets", "Details", "Person", new { ownerId = Model.Owner.Id }, new { @class = "btn btn-primary m-lg-2" })
</form>
</div>
